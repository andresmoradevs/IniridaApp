<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactUsFragment">

    <TextView
        android:id="@+id/findUs"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Encuéntranos en redes sociales"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_bold"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@+id/findUs"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_below="@+id/line"
        android:id="@+id/linear_contact"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fb"
            android:layout_width="54dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/facebook"/>
        <TextView
            android:id="@+id/back"
            android:text="Inírida App"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/fredoka_bold"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_contact"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_margin="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@id/line2"
        android:src="@drawable/logo_black"/>

    <TextView
        android:id="@+id/usMail"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="iniridamovilapp@gmail.com"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_condensed_bold"/>
    <TextView
        android:id="@+id/usContact"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/usMail"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="+57 300 8427074"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_condensed_bold"/>


</RelativeLayout>