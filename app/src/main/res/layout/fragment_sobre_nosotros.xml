<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.AboutUsFragment">

    <ImageView
        android:id="@+id/title_register2"
        android:background="@drawable/bigicon_about_us"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-71dp"
        android:fontFamily="@font/fredoka_bold"
        android:text="Sobre nosotros"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_aboutus"
        android:layout_below="@+id/about_title"
        android:layout_margin="15sp"
        android:fontFamily="@font/fredoka_variablefont_wdth"
        android:textColor="@color/white"/>

</RelativeLayout>